---
import type { Note } from "../types/types";

interface Props {
  notes: Note[];
}

const { notes } = Astro.props;

// 上面一行：机构
const affNotes = notes.filter((n) => !["*", "†"].includes(n.symbol));
// 下面一行：* 和 †
const specialNotes = notes.filter((n) => ["*", "†"].includes(n.symbol));
---

<div class="text-center text-sm md:text-base space-y-1">
  {affNotes.length > 0 && (
    <div>
      {
        affNotes.map((note, index) =>
          // prettier-ignore
          <span>
            <sup>{note.symbol}</sup>{note.text}{index < affNotes.length - 1 ? ", " : ""}
          </span>
        )
      }
    </div>
  )}

  {specialNotes.length > 0 && (
    <div>
      {
        specialNotes.map((note, index) =>
          // prettier-ignore
          <span>
            <sup>{note.symbol}</sup>{note.text}{index < specialNotes.length - 1 ? ", " : ""}
          </span>
        )
      }
    </div>
  )}
</div>
